<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                style="@style/main_button"
                android:onClick="onClickMatrixMain"
                android:text="@string/matrix" />

            <Button
                android:onClick="onClickAnimatorMain"
                style="@style/main_button"
                android:text="Animator" />

            <Button
                style="@style/main_button"
                android:text="Material Design" />

            <Button
                style="@style/main_button"
                android:text="Canvas" />

            <Button
                style="@style/main_button"
                android:text="Scroll" />

            <Button
                style="@style/main_button"
                android:text="AttrsStyle" />

            <Button
                style="@style/main_button"
                android:text="CropImage" />

            <Button
                style="@style/main_button"
                android:text="Annotation" />

            <Button
                style="@style/main_button"
                android:text="Bitmap" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>