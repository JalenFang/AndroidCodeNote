<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/item_schedule_date_view_fl_data_rootView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xxxdpi_92px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/item_schedule_date_view_tv_solar_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/item_schedule_date_view_tv_lunar_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/xxxdpi_3px"
                android:ems="1"
                android:textSize="8dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/item_schedule_date_view_iv_holiday"
            android:layout_width="@dimen/xxxdpi_36px"
            android:layout_height="@dimen/xxxdpi_36px"
            android:layout_gravity="right"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:src="@mipmap/schedule_holiday_blue" />

    </FrameLayout>

</LinearLayout>

