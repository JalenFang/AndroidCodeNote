<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space style="@style/space_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center">

                <Button
                    style="@style/weight_button"
                    android:onClick="onClickMatrixTranslate"
                    android:text="@string/matrix_translate" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@color/common_style_blue"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/activity_matrix_demostration_iv_pic"
                        android:layout_width="@dimen/matrix_image_view_dimen"
                        android:layout_height="@dimen/matrix_image_view_dimen"
                        android:background="@color/common_style_orange"
                        android:scaleType="matrix"
                        android:src="@mipmap/pic_1" />

                </LinearLayout>

            </LinearLayout>

            <Space style="@style/space_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center">

                <Button
                    style="@style/weight_button"
                    android:onClick="onClickMatrixScale"
                    android:text="@string/matrix_scale" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@color/common_style_blue"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/activity_matrix_demostration_iv_pic_Scale"
                        android:layout_width="@dimen/matrix_image_view_dimen"
                        android:layout_height="@dimen/matrix_image_view_dimen"
                        android:background="@color/common_style_orange"
                        android:scaleType="matrix"
                        android:src="@mipmap/pic_1" />

                </LinearLayout>

            </LinearLayout>

            <Space style="@style/space_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center">

                <Button
                    style="@style/weight_button"
                    android:onClick="onClickMatrixRotate"
                    android:text="@string/matrix_rotate" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@color/common_style_blue"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/activity_matrix_demostration_iv_pic_Rotate"
                        android:layout_width="@dimen/matrix_image_view_dimen"
                        android:layout_height="@dimen/matrix_image_view_dimen"
                        android:background="@color/common_style_orange"
                        android:scaleType="matrix"
                        android:src="@mipmap/pic_1" />

                </LinearLayout>

            </LinearLayout>

            <Space style="@style/space_style" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center">

                <Button
                    style="@style/weight_button"
                    android:onClick="onClickMatrixSkew"
                    android:text="@string/matrix_skew" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@color/common_style_blue"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/activity_matrix_demostration_iv_pic_skew"
                        android:layout_width="@dimen/matrix_image_view_dimen"
                        android:layout_height="@dimen/matrix_image_view_dimen"
                        android:background="@color/common_style_orange"
                        android:scaleType="matrix"
                        android:src="@mipmap/pic_1" />

                </LinearLayout>

            </LinearLayout>

            <Space style="@style/space_style" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>